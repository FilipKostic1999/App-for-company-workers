<!-- spinner_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#EEF5DB" /> <!-- Change this color to your desired press color -->
            <corners android:radius="8dp" /> <!-- Adjust corner radius as needed -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</selector>
